<!-- category root.wxml -->
<view class="container">
  <scroll-view scroll-y="true">
    <view class="gridview">
      <view class="item" wx:for="{{categoryData}}" wx:key="index">
        <navigator url="{{'../categorydetail/categorydetail?categoryDetailID='+item.id + '&categoryDetailTitle=' + item.title}}">
          <image class="img" src=" {{item.thumbUrl}}" mode="aspectFill" />
          <text class="label">{{item.title}}</text>
        </navigator>
      </view>
    </view>
  </scroll-view>
</view>
